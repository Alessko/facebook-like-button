<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="com_facebook_like_height">30sp</dimen>
    <dimen name="com_facebook_like_padding_left">6sp</dimen>
    <dimen name="com_facebook_like_padding_top">0sp</dimen>
    <dimen name="com_facebook_like_padding_right">6sp</dimen>
    <dimen name="com_facebook_like_padding_bottom">0sp</dimen>
    <dimen name="com_facebook_like_compound_drawable_padding">6sp</dimen>
    <color name="com_facebook_like_text_color">#fff</color>
    <dimen name="com_facebook_like_text_size">16sp</dimen>
    <dimen name="com_facebook_like_activity_progress_size">40dp</dimen>
    <color name="com_facebook_like_box_text_color">#898f9c</color>
    <color name="com_facebook_like_box_background_color">#8fff</color>
    <dimen name="com_facebook_like_box_corners_radius">2dp</dimen>
    <dimen name="com_facebook_like_box_stroke_width">2px</dimen>

    <style name="Widget.FacebookLikeButton" parent="@android:style/Widget.Button">
        <item name="android:id">@id/com_facebook_like</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/com_facebook_like_height</item>
        <item name="android:text">@string/like</item>
        <item name="android:textColor">@color/com_facebook_like_text_color</item>
        <item name="android:textSize">@dimen/com_facebook_like_text_size</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:drawablePadding">@dimen/com_facebook_like_compound_drawable_padding</item>
        <item name="android:paddingLeft">@dimen/com_facebook_like_padding_left</item>
        <item name="android:paddingTop">@dimen/com_facebook_like_padding_top</item>
        <item name="android:paddingRight">@dimen/com_facebook_like_padding_right</item>
        <item name="android:paddingBottom">@dimen/com_facebook_like_padding_bottom</item>
        <item name="android:background">@drawable/com_facebook_button_blue</item>
        <item name="android:drawableLeft">@drawable/com_facebook_inverse_icon</item>
    </style>

    <style name="Widget.FacebookLikeBox" parent="@android:style/Widget.Button">
        <item name="android:id">@id/com_facebook_like_box</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/com_facebook_like_height</item>
        <item name="android:minWidth">@dimen/com_facebook_like_height</item>
        <item name="android:text">@string/com_facebook_like_box_text_default</item>
        <item name="android:textColor">@color/com_facebook_like_box_text_color</item>
        <item name="android:textSize">@dimen/com_facebook_like_text_size</item>
        <item name="android:background">@drawable/com_facebook_like_box</item>
    </style>
</resources>
